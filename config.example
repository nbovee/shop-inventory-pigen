# =============================================================================
# [BAKED IN] - Cannot change between installations
# These values are compiled into the image at build time
# =============================================================================

# Pi-Gen Build Configuration
PI_GEN_RELEASE="Project Name v1.0.0"
IMG_NAME="projectName"
RELEASE="bookworm"
LOCALE_DEFAULT="en_US.UTF-8"
TARGET_HOSTNAME="project-hostname"          # Written to /etc/hostname
DISABLE_FIRST_BOOT_USER_RENAME=1
FIRST_USER_NAME="user"                      # Used in systemd service files
FIRST_USER_PASS="password"
KEYBOARD_KEYMAP="us"
TIMEZONE_DEFAULT="America/New_York"         # System timezone
ENABLE_SSH=1
STAGE_LIST="stage0 stage1 stage2 stageAccessPoint stageApplication"
PRESERVE_CONTAINER=1
CLEAN=0
WPA_COUNTRY=US
# note this uses Unix style brackets to get pwd envs/paths due to our use of WSL
PIGEN_DOCKER_OPTS="--volume $(pwd)/stageAccessPoint:/pi-gen/stageAccessPoint --volume $(pwd)/stageApplication:/pi-gen/stageApplication"

# Application Directory Structure (directories created during image build)
APP_INSTALL_DIR="/var/www/pantry"
APP_SUB_PATH="/src/shop-inventory"        # Subdirectory path within APP_INSTALL_DIR
APP_LOG_DIR="/var/log/pantry"
APP_ENV_DIR="/etc/pantry"
APP_RUN_DIR="/run/pantry"
APP_USER="${FIRST_USER_NAME}"
APP_GROUP=www-data


# =============================================================================
# [RUNTIME] - Can differ between installations
# These values are read from /etc/pantry/config at boot time
# =============================================================================

# WiFi Access Point Configuration
WIFI_SSID=ProjectWiFi
WIFI_PASS=wifi-password-here
AP_GATEWAY_IP=10.42.0.1              # Gateway IP for the access point
AP_DHCP_START=10.42.0.2              # DHCP range start
AP_DHCP_END=10.42.0.254              # DHCP range end
AP_NETMASK=255.255.255.0             # Subnet mask

# Django Application Settings
DJANGO_DEPLOYMENT_SITE=YourCity             # Site-specific identifier
DJANGO_SECRET_KEY='change-this-to-a-secure-secret-key'  # Should be unique per installation
DJANGO_DEBUG=false
DJANGO_ALLOWED_HOSTS="${TARGET_HOSTNAME},*,127.0.0.1"  # Contains TARGET_HOSTNAME but * allows all
DJANGO_SQLITE_DIR=db
DJANGO_STATIC_ROOT=staticfiles
DJANGO_MEDIA_ROOT=media
DJANGO_LANGUAGE_CODE=en-us
DJANGO_TIME_ZONE=America/New_York
DJANGO_CSRF_TRUSTED_ORIGINS="https://${TARGET_HOSTNAME},http://${TARGET_HOSTNAME},http://localhost,http://127.0.0.1"  # Contains TARGET_HOSTNAME
DJANGO_SESSION_COOKIE_SECURE=false
DJANGO_CSRF_COOKIE_SECURE=false
DJANGO_SECURE_SSL_REDIRECT=false

# Email Settings
DJANGO_EMAIL_HOST=localhost
DJANGO_EMAIL_PORT=25
DJANGO_EMAIL_HOST_USER=
DJANGO_EMAIL_HOST_PASSWORD=
DJANGO_EMAIL_USE_TLS=false
DJANGO_SERVER_EMAIL=root@localhost
DJANGO_DEFAULT_FROM_EMAIL=webmaster@localhost
DJANGO_ADMIN_USERNAME=
DJANGO_ADMIN_PASSWORD=                      # Should be unique per installation

# Backup Settings
DJANGO_BACKUP_PASSWORD=change-this-backup-password  # Should be unique per installation
BACKUP_PASSWORD=${DJANGO_BACKUP_PASSWORD}
BACKUP_MOUNT_DIR=/tmp/pantry-backup-mounts  # Directory for mounting USB backup drives

# Gunicorn Web Server Settings
GUNICORN_WORKERS=3
GUNICORN_TIMEOUT=120
GUNICORN_LOG_LEVEL=info
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=100
